{
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "release": "lerna publish --no-private",
    "version": "lerna version --no-private",
    "version:breaking": "lerna version",
    "version:beta": "lerna version --no-git-tag-version --conventional-prerelease",
    "lint": "eslint --ext .ts,.tsx,.js",
    "format": "eslint --fix \"packages/*/src/**/*.{js,ts,tsx}\"",
    "clean:types": "rimraf packages/*/*.tsbuildinfo",
    "build": "yarn build:types && yarn workspaces foreach -pti --no-private run build",
    "build:bundle": "yarn workspaces foreach -pti --no-private run build:bundle",
    "build:clean": "yarn workspaces foreach -pti --no-private run build:clean",
    "build:types": "yarn build:copy:ambient && tsc --build && yarn workspaces foreach -pti --no-private run build:legacy-types",
    "build:copy:ambient": "mkdirp ./packages/endpoint/lib && copyfiles --flat ./packages/endpoint/src/schema.d.ts ./packages/endpoint/lib/ && copyfiles --flat ./packages/endpoint/src/endpoint.d.ts ./packages/endpoint/lib/&& mkdirp ./packages/core/lib && copyfiles --flat ./packages/core/src/state/RIC.d.ts ./packages/core/lib/state && mkdirp ./packages/experimental/lib && copyfiles --flat ./packages/experimental/src/rest/RestEndpoint.d.ts ./packages/experimental/lib/rest && copyfiles --flat ./packages/rest/src/RestEndpoint.d.ts ./packages/rest/lib",
    "test": "NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules jest",
    "test:ci": "yarn test --ci",
    "test:coverage": "yarn test --coverage",
    "prepare": "yarn build:copy:ambient && tsc --build",
    "prepack": "yarn prepare",
    "prepublishOnly": "yarn workspaces foreach -pti --no-private run build:legacy-types",
    "postinstall": "yarn prepare"
  },
  "engines": {
    "node": "^12.17 || ^13.7 || >=14"
  },
  "browserslist": [
    "extends @anansi/browserslist-config"
  ],
  "devDependencies": {
    "@anansi/babel-preset": "3.2.22",
    "@anansi/browserslist-config": "1.4.1",
    "@anansi/eslint-plugin": "0.14.4",
    "@anansi/jest-preset": "0.7.38",
    "@babel/cli": "7.19.3",
    "@babel/core": "7.20.2",
    "@babel/node": "7.20.2",
    "@commitlint/cli": "17.2.0",
    "@commitlint/config-conventional": "17.2.0",
    "@lerna-lite/cli": "1.12.0",
    "@rest-hooks/core": "workspace:^",
    "@rest-hooks/test": "^7.2.1",
    "@testing-library/react": "13.4.0",
    "@testing-library/react-hooks": "8.0.1",
    "@testing-library/react-native": "11.4.0",
    "@types/jest": "29.2.2",
    "@types/lodash": "4.14.188",
    "@types/node": "18.11.9",
    "@types/react": "18.0.25",
    "@typescript-eslint/eslint-plugin": "5.42.1",
    "@typescript-eslint/parser": "5.42.1",
    "babel-plugin-transform-object-hasown": "^1.1.0",
    "benchmark": "^2.1.4",
    "conventional-changelog-anansi": "^0.2.0",
    "copyfiles": "^2.4.1",
    "core-js": "3.26.0",
    "coveralls": "^3.1.0",
    "cpy-cli": "4.2.0",
    "cross-fetch": "^3.0.6",
    "eslint": "8.27.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-react": "7.31.10",
    "eslint-plugin-react-hooks": "4.6.0",
    "ignore-styles": "^5.0.1",
    "jest": "29.3.1",
    "jest-environment-jsdom": "29.3.1",
    "mkdirp": "^1.0.4",
    "nock": "13.2.9",
    "prettier": "2.7.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-native": "0.70.5",
    "react-test-renderer": "18.2.0",
    "redux": "4.2.0",
    "rest-hooks": "workspace:^",
    "rimraf": "^3.0.2",
    "ts-node": "10.9.1",
    "typescript": "4.8.4",
    "whatwg-fetch": "3.0.0"
  },
  "packageManager": "yarn@3.2.4"
}
